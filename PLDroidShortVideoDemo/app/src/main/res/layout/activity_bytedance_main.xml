<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context="com.qiniu.shortvideo.bytedance.bytedance.MainActivity">

    <FrameLayout
        android:id="@+id/surface_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.qiniu.shortvideo.bytedance.bytedance.CameraSurfaceView
            android:id="@+id/gl_surface"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top|center_horizontal" />
    </FrameLayout>

    <com.qiniu.shortvideo.bytedance.bytedance.view.ViewfinderView
        android:id="@+id/qrcode_finder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/rl_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <ImageView
                android:src="@drawable/ic_logo"
                android:layout_marginStart="30dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/iv_change_camera"
                android:src="@drawable/ic_refresh"
                android:layout_gravity="end"
                android:layout_marginEnd="30dp"
                android:padding="10dp"
                android:background="@drawable/bg_item_unselect_selector"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <ImageView
                android:id="@+id/iv_qr_code"
                android:src="@drawable/ic_qr_scanner"
                android:layout_gravity="end"
                android:layout_marginEnd="80dp"
                android:padding="10dp"
                android:background="@drawable/bg_item_unselect_selector"
                android:layout_width="50dp"
                android:layout_height="50dp" />
        </FrameLayout>

        <com.qiniu.shortvideo.bytedance.bytedance.view.VideoButton
            android:id="@+id/btn_take_pic"
            android:layout_width="80dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_height="80dp"
            android:layout_marginBottom="120dp"
            android:background="@drawable/bg_take_pic_selector"
            />

        <LinearLayout
            android:id="@+id/fps_group"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="70dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FPS:"
                android:textSize="18sp"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/info_fps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="30"
                android:textSize="18sp"
                android:textColor="@android:color/white"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_face_verify"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="20dp"
            android:padding="10dp"
            android:background="@color/colorBg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/similarity"
                    android:textColor="@color/colorWhite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="@string/cost"
                    android:textColor="@color/colorWhite"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:gravity="end"
                android:layout_marginStart="20dp"
                android:minWidth="60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_similarity_face_verify"
                    android:textColor="@color/colorWhite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_cost_face_verify"
                    android:textColor="@color/colorWhite"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_result_face_verify"
                    android:textColor="@color/colorWhite"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/faceinfotrans"
            android:layout_marginTop="100dp"
            android:layout_marginStart="20dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"/>

        <FrameLayout
            android:id="@+id/tip_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="200dp"
            android:visibility="visible"/>

        <FrameLayout
            android:id="@+id/board_container"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_alignParentBottom="true"
            />

        <ImageView
            android:id="@+id/iv_face_verify_show"
            android:layout_above="@id/board_container"
            android:layout_alignParentEnd="true"
            android:layout_margin="16dp"
            android:layout_width="80dp"
            android:layout_height="120dp" />

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textColor="@android:color/holo_red_dark"
            tools:text="test"/>
        <TextView
            android:id="@+id/camera_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_info"
            android:textColor="@android:color/holo_blue_dark"
            tools:text="test"/>

        <LinearLayout
            android:id="@+id/ll_feature"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_identify"
                android:orientation="vertical"
                android:background="@drawable/bg_item_unselect_selector"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ic_identification"
                    android:padding="5dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

                <TextView
                    android:text="@string/detect"
                    android:textColor="@color/featureboard_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_effect"
                android:orientation="vertical"
                android:layout_marginStart="30dp"
                android:background="@drawable/bg_item_unselect_selector"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ic_effect"
                    android:padding="5dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

                <TextView
                    android:text="@string/effect"
                    android:textColor="@color/featureboard_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_sticker"
                android:orientation="vertical"
                android:layout_marginStart="30dp"
                android:background="@drawable/bg_item_unselect_selector"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ic_sticker"
                    android:padding="5dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

                <TextView
                    android:text="@string/sticker"
                    android:textColor="@color/featureboard_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>



</FrameLayout>
